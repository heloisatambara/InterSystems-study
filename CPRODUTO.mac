 // consistência para qtd < 0
registrarcompra() public {
	Read !, "Quantos foram comprados? ", comprados
	Set ^qtd = ^qtd - comprados
	Write !, "Agora há "_^qtd_" "_^nome_"s restantes."
	Quit
}
